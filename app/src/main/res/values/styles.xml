<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@drawable/menu_boarder</item>
       <item name="actionOverflowMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
    </style>



    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPositiveButtonDialog</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorNegativeButtonDialog</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton" >
        <item name="cornerRadius">15dp</item>
        <item name="backgroundTint">@color/colorButtonMain</item>
        <item name="rippleColor">@color/colorButtonRipple</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/colorButtonStroke</item>

    </style>

    <style name="StopButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton" >
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/colorButtonStop</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorButtonStroke</item>
        <item name="rippleColor">@color/colorButtonRipple</item>
    </style>



    <style name="DialogButtonPositiveStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorDialogButtonStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorDialogButtonText</item>
    </style>

    <style name="DialogButtonNegativeStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorDialogButtonStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/colorDialogButtonBackground</item>
        <item name="android:textColor">@color/colorDialogButtonAccentText</item>
    </style>

    <style name="FeedbackDialogButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorDialogButtonStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorDialogButtonText</item>
    </style>

    <style name="SaveShotDialogButtonStylePositive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorDialogButtonStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/colorDialogButtonBackground</item>
        <item name="android:textColor">@color/colorDialogButtonAccentText</item>
    </style>

    <style name="SaveShotDialogButtonStyleNegative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorDialogButtonStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/colorDialogButtonText</item>
    </style>



</resources>
